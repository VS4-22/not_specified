        <input type="text" class="px-5 w-1/2 py-2 border-2 border-zinc-800 " name="key" placeholder="Password" >
        <input type="submit" value="Login" class="w-28 rounded-lg  mb-4 bg-blue-500 text-white">
        <a class="text-blue-300 mb-4 text-xl " href="/cr">Create account</a>

    </form>
   </div>
